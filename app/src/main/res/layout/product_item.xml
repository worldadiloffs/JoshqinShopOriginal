<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgroundforproduct_item"
    android:elevation="5dp"
    android:layout_margin="5dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/product_image_card"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:elevation="3dp">
        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_1"
            android:scaleType="fitXY"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/product_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/product_image_card"
        app:layout_constraintStart_toStartOf="@id/product_image_card"
        app:layout_constraintEnd_toEndOf="@id/product_image_card"
        android:text="Item name"
        android:layout_marginTop="15dp"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginEnd="10dp"/>
    <ImageView
        android:id="@+id/product_star"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/baseline_star_24"
        app:layout_constraintTop_toTopOf="@id/product_rating"
        app:layout_constraintBottom_toBottomOf="@id/product_rating"
        app:layout_constraintStart_toStartOf="@id/product_image_card"/>
    <TextView
        android:id="@+id/product_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/product_star"
        app:layout_constraintTop_toBottomOf="@id/product_title"
        android:text="4.7"
        android:layout_marginStart="5dp"/>
    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/product_rating"
        app:layout_constraintStart_toStartOf="@id/product_image_card"
        android:text="$ 225.00"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/black"/>
    <ImageView
        android:id="@+id/product_basket"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="@id/product_image_card"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:src="@drawable/baseline_add_shopping_cart_24"
        android:background="@drawable/backgroundforpoduct_image"
        android:backgroundTint="#3F51B5"
        android:padding="8dp"
        android:elevation="5dp"
        app:tint="@color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>