        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/product_iamge_vp"
        app:layout_constraintStart_toStartOf="@id/product_iamge_vp"
        android:text="Product"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/holati_car_details"
        android:layout_width="50dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/single_product_name"
